<button
  id="back-to-top"
  class="fixed bottom-8 right-8 p-3 rounded-full bg-secondary border-2 border-theme backdrop-blur-sm text-primary hover:text-accent transition-colors z-50"
  aria-label="Back to top"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2.5"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <polyline points="18 15 12 9 6 15" />
  </svg>
</button>

<script is:inline>
  document.getElementById('back-to-top')?.addEventListener('click', function() {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });
</script>
