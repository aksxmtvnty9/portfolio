---
import { cn } from '@lib/utils';
import Link from './Link.astro';

interface Props {
  href: string;
  title: string;
  description: string;
  class?: string;
}

const { href, title, description, class: className } = Astro.props;
---

<Link
  href={href}
  class={cn(
    "group flex items-center justify-between gap-4 py-4 border-b border-theme hover:bg-secondary/50 transition-colors",
    className
  )}
>
  <div class="flex-1 min-w-0">
    <h3 class="font-semibold text-primary truncate group-hover:text-accent transition-colors">
      {title}
    </h3>
    <p class="text-sm text-secondary line-clamp-2">
      {description}
    </p>
  </div>

  <!-- Animated Arrow -->
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="shrink-0 text-secondary group-hover:text-accent transition-colors"
  >
    <line
      x1="5"
      y1="12"
      x2="19"
      y2="12"
      class="translate-x-3 group-hover:translate-x-0 scale-x-0 group-hover:scale-x-100 transition-transform duration-300"
    />
    <polyline
      points="12 5 19 12 12 19"
      class="-translate-x-1 group-hover:translate-x-0 transition-transform duration-300"
    />
  </svg>
</Link>
